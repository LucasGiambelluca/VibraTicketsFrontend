# Frontend environment variables
# Copy this file to `.env` and adjust values for your local/dev environment

# Configuración de desarrollo
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=RS Tickets
VITE_APP_VERSION=1.0.0

# Groq API Configuration
VITE_GROQ_API_KEY=gsk_your_groq_api_key_here

# Configuración de MercadoPago (opcional)
VITE_MP_PUBLIC_KEY=your_mercadopago_public_key_here
VITE_MERCADOPAGO_PUBLIC_KEY=TEST-xxxxxxxxxxxxxxxx

# Google Maps API Key
# Obtén tu API key en: https://console.cloud.google.com/google/maps-apis
# Asegúrate de habilitar: Maps JavaScript API, Places API, Geocoding API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google reCAPTCHA v2
# Obtén tus keys en: https://www.google.com/recaptcha/admin/create
# Selecciona reCAPTCHA v2 "I'm not a robot" Checkbox
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Configuración de base de datos (para desarrollo local)
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=ticketera_db
